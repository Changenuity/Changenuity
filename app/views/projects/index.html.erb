    <!-- Introduction with changenuity background -->
    <section id="Discover">
      <h1> Discover </h1>
      <h4 class="tracking-in-expand">Projects that are changing the world.</h4>
    </section>

  </header>

<!-- Filter bar -->
  <section id="view-projects">
    <div class="container">
      <div class="row filters">
        <div id="options-title">
          Filters
        </div>
        <!-- Dropdown boxes -->
        <div class="options">
          Type:
          <select class="custom-select">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div class="options">
          Sectors:
          <select class="custom-select">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div class="options">
          Location:
          <select class="custom-select">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
      </div>
    </div>
  </section>

  <section id="main-section" class="container opt-section">
    <p class="text-center">Want to see your project on this page? <%= link_to "Post your project today!", post_path %></p>
    <article>
      <h2 class="article-header">Opportunities</h2>
      <ul class="opp-card-grid links-list">
      <div>
        <% @projects.each do |project| %>
          <%= render project %>
        <% end %>
      </ul>
      </div>
    </article>
  </section>
</main><!-- End of page-main -->
