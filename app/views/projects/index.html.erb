<% provide(:title, "Browse Projects") %>
<main id="page-main">
    <style> /* These styles are page specific */
    #page-main-header {
      background-image: url("http://placehold.it/350x65");
    }
  </style>

  <header id="page-main-header" class="jumbotron splash">
    <div class="container">
      <h1>Browse Projects</h1>
      <p>Your change is right around the corner.</p>
    </div>
  </header>

  <div class="container">
    <p class="h3 text-center">Want to see your project on this page? <%= link_to "Post your project today!", post_path %></p>
    <div class="bg-primary opt-section-header">
      <div class="container">
        <h2 class="text-capitalize">UBC Engineering Design Teams</h2>
      </div>
    </div>
    <section class="container opt-section">
      <div class="row">
        <% @projects.each do |project| %>
          <div class="col-sm-6 col-md-3">
            <div class="content-wrapper">
              <%= link_to image_tag(project.image.url(:medium), alt: project.name, class: "img-responsive center-block icon"), project_path(project) %>
              <h4 class="bg-primary"><%= link_to project.name, project_path(project) %></h4>
              <p><%= project.description %></p>
            </div>
          </div>
        <% end %>
      </div> <!-- End of row -->
    </section> <!-- End of container -->
  </div>
</main>
