<% provide(:title, "Resend Unlock") %>
<% content_for :css_slug do %>unlocks-new<% end %>
<% content_for :header do %>Resend Unlock<% end %>
<%= render layout: "main" do %>
  <h2>Resend unlock instructions</h2>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { class: "devise-form", method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, placeholder: "email@example.com" %>
    </div>
    <div class="actions">
      <%= f.submit "Resend unlock instructions", class: "action" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
