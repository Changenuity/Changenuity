<% provide(:title, "Sign In") %>
<% content_for :css_slug do %>sessions-new<% end %>
<% content_for :header do %>Sign In<% end %>
<%= render layout: "main" do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, placeholder: "email@example.com" %>
    </div>
    <div class="field">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password123" %>
    </div>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <div class="actions">
      <%= f.submit "Sign In", class: "action" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
