<% provide(:title, @proposal.user_id) %>
<p>
	<strong>Application:</strong><br/>
	<% if (@proposal.reason) %>Reason: <%= @proposal.reason %><br/><%end%>
	<% if (@proposal.passions) %>Passions: <%= @proposal.passions %><br/><%end%>
	<% if (@proposal.skills) %>Skills: <%= @proposal.skills %><br/><%end%>
	<% if (@proposal.work) %>Work: <%= @proposal.work %><br/><%end%>
	<% if (@proposal.commitment) %>Commitment: <%= @proposal.commitment %><br/><%end%>
	<% if (@proposal.estimation) %>Estimation: <%= @proposal.estimation %><br/><%end%>
	<% if (@proposal.website) %>Personal Website: <%= @proposal.website %><br/><%end%>
	<% if (@proposal.linkedin) %>LinkedIn: <%= @proposal.linkedin %><br/><%end%>
	<% if (@proposal.github) %>Github: <%= @proposal.github %><br/><%end%>
	
  	<%= link_to "Project", project_path(:id => @proposal.project_id) %><br/>
<% if user_signed_in? && @proposal.user_id == current_user.id %>
	<%= link_to "Edit", edit_project_proposal_path(@proposal.project_id, @proposal.id) %>
<% end %>
</p>